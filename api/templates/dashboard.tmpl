<!DOCTYPE html>
<html>
  <head>
    <title>Commenting System</title>
  </head>
  <body>
    <h1>Commenting System Dashboard</h1>
    <h2>Comments</h2>
    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>Timestamp</th>
          <th>Name</th>
          <th>Email</th>
          <th>Notify</th>
          <th>Page</th>
          <th>Content</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      {{range .comments }}
        <tr>
          <td>{{.Id}}</td>
          <td>{{.Timestamp}}</td>
          <td>{{.Name}}</td>
          <td>{{.Email}}</td>
          <td>{{.Notify}}</td>
          <td>{{.Page}}</td>
          <td><p class="content">{{.Content}}</p></td>
          <td>
            <form name="delete-{{.Id}}" action="admin/delete" method="post">
              <input type="hidden" name="commentId" value="{{.Id}}" />
              <input type="submit" value="Delete"/>
            </form>
          </td>
        </tr>
      {{end}}
      </tbody>
    </table>
    <h2>Backup</h2>
    <a href="/admin/backup">Download Backup</a>
    <style>
      * {
        box-sizing: border-box;
      }
      body {
        font-family: sans-serif;
        padding: 2rem;
      }
      h1 {
        font-size: 2em;
        margin-bottom: 0.5em;
      }
      h2 {
        font-size: 1.5em;
        margin-bottom: 0.5em;
      }
      p {
        margin-bottom: 1em;
      }
      a {
        color: #0066cc;
        text-decoration: none;
      }
      a:hover {
        text-decoration: underline;
      }
      .content {
        white-space: pre-wrap;
      }
      table {
        border-spacing: 0;
      }
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
      tr:hover {
        background-color: papayawhip;
      }
      tr:nth-child(even):hover {
        background-color: #f3e3ca;
      }
      td {
        padding: 0.5rem;
      }
    </style>
  </body>
</html>